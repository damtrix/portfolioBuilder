datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  aboutMe         String
  createdAt       DateTime         @default(now())
  email           String
  firstName       String?
  githubLink      String?
  home            Home[]
  id              String           @id @default(cuid())
  image           String
  lastName        String?
  linkedinLink    String?
  message         String
  password        String
  portfolios      Portfolio[]
  roles           Json
  speciality      String
  technicalSkills TechnicalSkill[]
  twitterLink     String?
  updatedAt       DateTime         @updatedAt
  username        String           @unique
}

model TechnicalSkill {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
  url       String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model Home {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  logo       String?
  topBgImage String?
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model Language {
  acronym    String
  createdAt  DateTime    @default(now())
  id         String      @id @default(cuid())
  name       String
  portfolios Portfolio[]
  updatedAt  DateTime    @updatedAt
}

model Portfolio {
  category  String
  createdAt DateTime   @default(now())
  githubUrl String     @map("GithubUrl")
  id        String     @id @default(cuid())
  image     String
  info      String?
  language  Language[]
  liveUrl   String?
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  userId    String
}
